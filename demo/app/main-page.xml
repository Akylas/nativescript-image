<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:lv="nativescript-pro-ui/listview" xmlns:img="nativescript-image" loaded="pageLoaded">
    <StackLayout style.backgroundColor="#444">

        <lv:RadListView items="{{ dataItems }}" width="100%" height="100%" style.backgroundColor="#444" itemTemplateSelector="$index == -1 ? 'trailers' : 'test'" loadOnDemandMode="Auto" loadMoreDataRequested="{{onLoadMoreItemsRequested}}">
            <lv:RadListView.itemTemplates>
                <template key="test">
                    <StackLayout  height="100" style.backgroundColor="#444">
                <StackLayout orientation="horizontal" margin="5" style="border-radius:3;">
                    <img:Image imageUri="{{ poster_path }}" width="70" stretch="aspectFill" />
                    <AbsoluteLayout width="100%">
                        <img:Image stretch="aspectFill" width="100%" height="100%" style="opacity:0.2" imageUri="{{ backdrop_path }}" />
                        <FlexboxLayout flexDirection="column" margin="7">
                            <label text="{{ title }}" style.color="#fff"  width="100%" height="100%"  textWrap="true" />
                        </FlexboxLayout>
                    </AbsoluteLayout>
                </StackLayout>
                    </StackLayout>
                    </template>
            </lv:RadListView.itemTemplates>
        </lv:RadListView>

    </StackLayout>
</Page>