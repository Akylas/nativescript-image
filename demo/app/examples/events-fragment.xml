<ScrollView>
    <GridLayout rows="*, auto">
        <img:Img xmlns:img="@nativescript-community/ui-image" 
                            placeholderImageUri="res://ns_logo"
                            verticalAlignment="top"
                            width="75%"
                            progressiveRenderingEnabled="true"
                            showProgressBar="true"
                            progressBarColor="#3C5AFD"
                            src="http://pooyak.com/p/progjpeg/jpegload.cgi?o=1"
                            finalImageSet="onFinalImageSet"
                            intermediateImageSet="onIntermediateImageSet"
                            submit="onSubmit"
                            release="onRelease"/>
        <Label id="outputLabel" text="output: " row="1" textWrap="true"/>
    </GridLayout>
</ScrollView>
