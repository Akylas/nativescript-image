 <lv:CollectionView xmlns:lv="@nativescript-community/ui-collectionview" xmlns:img="@nativescript-community/ui-image" items="{{ dataItems }}" id="listView" width="100%" height="100%" >
    <lv:CollectionView.itemTemplate>
        <GridLayout rows="auto" backgroundColor="blue">
            <img:Img row="0" verticalAlignment="top"
                                backgroundUri="res://ns_logo"
                                backgroundColor="red"
                                src="{{ src }}" 
                                minHeight="200"
                                finalImageSet="onFinalImageSet"
                                />
            <Label height="22" text="{{ id }}" verticalAlignment="center" horizontalAlignment="center"/>
        </GridLayout>
    </lv:CollectionView.itemTemplate>
</lv:CollectionView>