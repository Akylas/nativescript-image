<ScrollView>
    <GridLayout rows="*, auto">
        <img:Img xmlns:img="nativescript-image"  
                        height="200" width="400"
                        placeholderImageUri="{{placeholderUri}}"
                        backgroundColor="blue"
                        failureImageUri="{{failureUri}}"
                        showProgressBar="true"
                        failure="onFailure"
                        src="http://error.jpgerror"/>
        <Label id="outputLabel" text="output: " row="1" textWrap="true"/>
    </GridLayout>
</ScrollView>
