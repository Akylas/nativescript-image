 <lv:RadListView xmlns:lv="nativescript-ui-listview" xmlns:img="nativescript-image" items="{{ dataItems }}" id="listView">
    <lv:RadListView.itemTemplate>
        <StackLayout rows="*, 20" backgroundColor="blue">
                <img:Img  xmlns:img="nativescript-image" row="0" verticalAlignment="top"
                                    backgroundUri="res://ns_logo"
                                    backgroundColor="red"
                                    src="{{ src }}"/>
                <!-- <StackLayout backgroundColor="blue" verticalAlignment="top" row="1"> -->
                    <Label height="22" backgroundColor="yellow" text="{{ id }}" verticalAlignment="center" horizontalAlignment="center"/>
                <!-- </StackLayout> -->
        </StackLayout>
    </lv:RadListView.itemTemplate>
</lv:RadListView>