 <lv:RadListView xmlns:lv="nativescript-ui-listview" xmlns:img="nativescript-image"  items="{{ movieItems }}" id="listView" loadOnDemandMode="Auto" loadMoreDataRequested="{{onLoadMoreItemsRequested}}"  backgroundColor="#444">
    <lv:RadListView.itemTemplate>
        <StackLayout  height="100" backgroundColor="#444">
            <StackLayout orientation="horizontal" margin="5" borderRadius="3">
                <img:Img src="{{ poster_path }}" width="70" stretch="aspectFit" />
                <AbsoluteLayout width="100%">
                    <img:Img stretch="aspectFill" width="100%" height="100%" style="opacity:0.2" src="{{ backdrop_path }}" />
                    <FlexboxLayout flexDirection="column" margin="7">
                        <label text="{{ title }}" color="#fff"  width="100%" height="100%"  textWrap="true" />
                    </FlexboxLayout>
                </AbsoluteLayout>
            </StackLayout>
        </StackLayout>
    </lv:RadListView.itemTemplate>
</lv:RadListView>